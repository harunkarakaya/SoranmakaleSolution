@model Soranmakale.Entities.Kategori

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4">
        <div class="row">
            <h3 style="color:red;"><i class="fa fa-warning"></i> Bu kategoriyi silme istediğinizden emin misiniz ?</h3>
            <br /><br />    
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.KategoriAdi)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.KategoriAdi)
                    </dd>
                    <br />
                    <dt>
                        @Html.DisplayNameFor(model => model.OlusturulmaTarihi)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.OlusturulmaTarihi)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <div class="col-md-3 col-md-push-1">
                            <a href="/Kategori/Index" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-arrow-left"></span> Geri Dön</a> &nbsp;

                        </div>
                        <div class="col-md-push-5 col-md-3">
                            <input type="submit" value="Delete" class="btn btn-danger btn-sm"/>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>