                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ProfilFotografi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ProfilFotografi, "", new { @class = "text-danger" })
                    </div>
                </div>*@

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input style="border-color:darkgray;" type="submit" value="Kaydet" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>




