@using Soranmakale.WebApp.ViewModel

@model WarningViewModel

@{
    ViewBag.Title = "Warning";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <br>
    <br>
    <br>
    <br>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="text-center">
                        @Model.Baslik
                        
                    </h3>
                </div>
                <div class="panel-body">
                    <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> @Model.Icerik
                    <hr />
                    @foreach (string msg in Model.Items)
                    {
                        @msg<br />
                    }
                </div>
            </div>
        </div>

    </div>

</div>

@{
    string js = string.Empty;
    if (Model.YonlendiriliyorMu)
    {
        js = "setTimeout(function () { window.location = '" + Model.YonlendirilmeUrl + "'; }, " +
            Model.YonlendirilmeSuresi + ")";
    }

}

<script>
    $(function(){

    @Html.Raw(js);

    });
</script>
